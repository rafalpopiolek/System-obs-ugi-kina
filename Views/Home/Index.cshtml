@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Teraz na ekranie</h1>
    <hr />
</div>

<div class="d-flex flex-wrap justify-content-between m-2">
    @foreach (var movie in ViewBag.Movies)
    {
        <div class="card p-3 m-3" style="width: 20rem;">
            <div class="card-body">
                <h5 class="card-title">@movie.Name</h5>
                <hr>
                <p class="card-text">@movie.Description</p>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@movie.Id" asp-controller="Movies">Szczegóły</a>
            </div>
        </div>
    }
</div>