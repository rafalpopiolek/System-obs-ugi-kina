@model WebApplication1.Models.Show

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj seans</h1>

<h4>Seans</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <select asp-for="MovieId" class ="form-control" asp-items="ViewBag.MovieId">
                    <option disabled selected>Wybierz film...</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="MovieStart" class="control-label"></label>
                <input asp-for="MovieStart" class="form-control" />
                <span asp-validation-for="MovieStart" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy seansów</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
