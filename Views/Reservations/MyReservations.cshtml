@model IEnumerable<WebApplication1.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Moje Rezerwacje</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Numer Seansu
            </th>
            <th>
                Miejsce
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Show.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seat.SeatNumber)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
