@model WebApplication1.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Rezerwacja</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="ShowId" class="control-label">Wybierz seans</label>
                <select asp-for="ShowId" class ="form-control" asp-items="ViewBag.ShowId"></select>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="SeatId" class="control-label">Wybierz miejsce</label>
                <select asp-for="SeatId" class ="form-control" asp-items="ViewBag.SeatId"></select>
            </div>

            <br/>
            <div class="form-group">
                <input type="submit" value="Zarezerwuj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Index">Wróć do rezerwacji</a>;
        <br />
    }

    <a href="/">Wróć do strony głównej</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
